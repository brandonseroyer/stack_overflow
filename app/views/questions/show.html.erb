<h1><%= @question.question %></h1>

<% if current_user %>
  <p><%= link_to "Edit", edit_question_path(@question) %></p>
  <p><%= link_to "Delete", question_path(@question),
  :data => {:confirm => "You sure?",
    :method => "delete"} %></p>
<% end %>

<p><%= link_to "Return to questions", questions_path %></p>
